<div class="container text-center">
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<ul style="list-style-type: none;">
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail), class: "btn btn-success"%>
<%= link_to 'Back', root_path, class: "btn btn-success" %>

</div>

