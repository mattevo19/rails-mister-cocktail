<div class="container">
  <h1 class="text-center">Cocktail List</h1>
  <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-danger" %>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 402px">
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          <ul>
            <% cocktail.doses.each do |dose| %>
            <li>
              <%= dose.description %>
              <%= dose.ingredient.name %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
