<div class="container">
<h1>Cocktail list</h1>

</div>
<div class="container">
<% @cocktails.each do |cocktail| %>
<div class="card" style="width: 402px">
  <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
  </div>
</div>
<br>
<% end %>
<%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-danger" %>
</div>

